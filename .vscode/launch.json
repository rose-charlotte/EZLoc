    "version": "0.2.0",
    "configurations": [
        {
            "name": "Admin",
            "request": "launch",
            "runtimeArgs": ["run", "dev"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "cwd": "${workspaceFolder}/apps/admin"
        },
        {
            "type": "java",
            "name": "API",
            "request": "launch",
            "mainClass": "com.ezloc.api.ApiApplication",
            "projectName": "api"
        }
    ],
    "compounds": [
        {
            "name": "All",
            "configurations": ["Admin", "API"]
        }
    ]
}
